@model RCL_Inventory.Models.Product

@{
    ViewData["Title"] = "Delete";
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="//cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" />
<link rel="stylesheet" href="~/css/sitee.css" />
<link rel="stylesheet" href="~/css/category.css" />
<link rel="stylesheet" href="~/css/product.css" />

<hr />
<h2 class="title">Are you sure you want to delete this item!?</h2>
<hr />


<div>
    <div class="card mt-3">
        <div class="card-header"> Product Information</div>
        <div class="card-body">
            <div class="card-body row">
                <div class="form-group col-md">
                    <label class="d-flex justify-content-center">
                        @Html.DisplayNameFor(model => model.ProductId)
                    </label>
                    <input class="form-control" disabled value="@Html.DisplayFor(model => model.ProductId)" />
                </div>

                <div class="form-group col-md">
                    <label class="d-flex justify-content-center">
                        @Html.DisplayNameFor(model => model.Name)
                    </label>
                    <input class="form-control" disabled value="@Html.DisplayFor(model => model.Name)" />
                </div>
                <div class="form-group col-md">
                    <label class="d-flex justify-content-center">
                        @Html.DisplayNameFor(model => model.Brand)
                    </label>
                    <input class="form-control" disabled value="@Html.DisplayFor(model => model.Brand)" />
                </div>
            </div>
            <div class="form-group col-md">
                <label class="d-flex justify-content-center">
                    @Html.DisplayNameFor(model => model.Description)
                </label>
                <input class="form-control" disabled value="@Html.DisplayFor(model => model.Description)" />
            </div>

        </div>
    </div>

    <div class="card mt-3">
        <div class="card-header"> Category Information</div>
        <div class="card-body">
            <div class="card-body row">
                <div class="form-group col-md">
                    <label class="d-flex justify-content-center">
                        @Html.DisplayNameFor(model => model.Category.CategoryId)
                    </label>
                    <input class="form-control" disabled value="@Html.DisplayFor(model => model.Category.CategoryId)" />
                </div>

                <div class="form-group col-md">
                    <label class="d-flex justify-content-center">
                        @Html.DisplayNameFor(model => model.Category.Name)
                    </label>
                    <input class="form-control" disabled value="@Html.DisplayFor(model => model.Category.Name)" />
                </div>

            </div>
            <div class="form-group col-md">
                <label class="d-flex justify-content-center">
                    @Html.DisplayNameFor(model => model.Category)
                </label>
                <input class="form-control" disabled value="@Html.DisplayFor(model => model.Category.Description)" />
            </div>
        </div>
    </div>


<div class="d-flex justify-content-center mt-2">
    <form asp-action="Delete">
        <input type="hidden" asp-for="ProductId" />
        <input type="submit" value="Delete" class="btn btn-danger mr-2 " style="font-size:20px" />|
    </form>
    <div class="ml-2 d-flex btn btn-secondary justify-content-center">
        <a asp-action="Index" style="font-size:20px; color:white;"> Back</a>
    </div>
</div>





