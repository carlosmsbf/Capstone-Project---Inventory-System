@model RCL_Inventory.Models.Category

@{
    ViewData["Title"] = "Details";
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="//cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" />
<link rel="stylesheet" href="~/css/sitee.css" />
<link rel="stylesheet" href="~/css/category.css" />
<link rel="stylesheet" href="~/css/product.css" />

<hr />
<h2 class="title">Category Details</h2>
<hr />

<div class="card mt-3">
    <div class="card-header"> Category Information</div>
    <div class="card-body">
        <div class="card-body row">
            <div class="form-group col-md">
                <label class="d-flex justify-content-center">
                    @Html.DisplayNameFor(model => model.CategoryId)
                </label>
                <input class="form-control" disabled value="@Html.DisplayFor(model => model.CategoryId)" />
            </div>

            <div class="form-group col-md">
                <label class="d-flex justify-content-center">
                    @Html.DisplayNameFor(model => model.Name)
                </label>
                <input class="form-control" disabled value="@Html.DisplayFor(model => model.Name)" />
            </div>

        </div>
        <div class="form-group col-md">
            <label class="d-flex justify-content-center">
                @Html.DisplayNameFor(model => model.Description)
            </label>
            <input class="form-control" disabled value="@Html.DisplayFor(model => model.Description)" />
        </div>

    </div>
</div>
