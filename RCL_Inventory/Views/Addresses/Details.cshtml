@model RCL_Inventory.Models.Address

@{
    ViewData["Title"] = "Details";
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="//cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" />
<link rel="stylesheet" href="~/css/sitee.css" />
<link rel="stylesheet" href="~/css/category.css" />
<link rel="stylesheet" href="~/css/product.css" />


<hr />
<h2 class="title">Address Details</h2>
<hr />

<div class="card mt-3">
    <div class="card-header"> Address Information</div>
    <div class="card-body">


        <div class="card-body row">
            <div class="col-md">

                <div class="form-group col-md">
                    <label class="d-flex justify-content-center">@Html.DisplayNameFor(model => model.Country)</label>
                    <input class="form-control" disabled value="@Html.DisplayFor(model => model.Country)" />
                </div>
                <div class="form-group col-md">
                    <label class="d-flex justify-content-center">@Html.DisplayNameFor(model => model.Province) </label>
                    <input class="form-control" disabled value="@Html.DisplayFor(model => model.Province)" />
                </div>

            </div>

            <div class="col-md">
                <div class="form-group col-md">
                    <label class="d-flex justify-content-center">@Html.DisplayNameFor(model => model.City)</label>
                    <input class="form-control" disabled value="@Html.DisplayFor(model => model.City)" />
                </div>


                <div class="form-group col-md">
                    <label class="d-flex justify-content-center"> @Html.DisplayNameFor(model => model.PostalCode) </label>
                    <input class="form-control" disabled value="@Html.DisplayFor(model => model.PostalCode)" />
                </div>
            </div>

        </div>
        <div class="col-md">
            <div class="form-group col-md">
                <label class="d-flex justify-content-center">@Html.DisplayNameFor(model => model.Street)</label>
                <input class="form-control" disabled value="@Html.DisplayFor(model => model.Street)" />
            </div>
        </div>
    </div>
</div>
<hr />

<div class="d-flex justify-content-center mt-2">
    <div class="mr-2">
        <a asp-action="Edit" asp-route-id="@Model.AddressId" input type="submit" class="btn btn-primary mr-2" style="font-size:20px">Edit</a>|
    </div>
    <div class="ml-2 d-flex btn btn-secondary justify-content-center">
        <a asp-action="Index" style="font-size:20px; color:white;"> Back</a>
    </div>
</div>
